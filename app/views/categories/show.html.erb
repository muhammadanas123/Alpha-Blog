<div style="background-color: lightgrey;">

    <h1 class="text-center mt-4">Category: <%= @category.name %></h1>

    <%if logged_in? and @user==current_user.admin? %>

    <div class="text-center mt-4">
        <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-info"%>
    </div>
    <%end%>

    <h3 class="text-center mt-4">Articles</h1>

    
    <%= render "articles/article"%>

</div>

<%= will_paginate @articles, class:"text-center mt-4 mb-4" %>
