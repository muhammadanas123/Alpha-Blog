<h1 class="text-center mt-4">Listing all articles</h1>

    <div class="container">

    <% @articles.each do |article| %>

    <div class="row justify-content-md-center">

        <div class="col-8 mt-4"> 
        <div class="card text-center">
        <div class="card-header font-italic">
            by <%= article.user.username if article.user %>
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success"%></h5>
            <p class="card-text"><%= truncate(article.description, length: 100)%></p>
            <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
            <%= link_to "Edit", article_path(article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", data: { turbo_method: :delete, confirm: 'Are you sure?' } %>
           


        </div>
        <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at)%> ago,
            <%= time_ago_in_words(article.updated_at)%> edited ago </small>
            </div>
        </div>
        </div>

    </div>
    <% end %>
    </div>